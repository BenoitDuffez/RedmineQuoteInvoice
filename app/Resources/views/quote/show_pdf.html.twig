<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{{ quote.title }}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

        <style type="text/css">
            body {
                padding-top: 4em;
            }
            .right {
                text-align: right;
            }
            .contact {
                white-space: pre;
                padding: 1em;
                margin: .5em;
                line-height: normal;
                border: 1px #666 solid;
                background: #fafafa;
            }
            .table {
                margin-top: 2em;
                margin-bottom: 2em;
            }
            div.container > div.row {
                padding-bottom: 1em;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 align="center">DEVIS N°{{ quote.title }}</h1>
                </div>
            </div>

            {% if quote.description | length %}
                <div class="row">
                    <div class="col-md-12">
                        <h3>Description</h3>
                        <div class="contact">{{ quote.description }}</div>
                    </div>
                </div>
            {% endif %}

            <div class="row">
                <div class="col-md-6">
                    <p>de</p>
                    <div class="contact">Benoit Duffez
18, allée du Léon
35230 Bourgbarré

SIRET: 53879565900035</div>
                </div>
                <div class="col-md-6 right">
                    <p>pour</p>
                    <div class="contact">{{ quote.customerField('firstname') }} {{ quote.customerField('lastname') }}
{{ quote.customerField('address') }}

SIRET: {{ quote.customerField('siret') }}</div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 right">
                    {{ quote.dateEdition |date('d/m/Y') }}
                </div>
            </div>

            {% set quoteTotal = 0 %}
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Section</th>
                        <th>Désignation</th>
                        <th class="right">Total H.T.</th>
                    </tr>
                </thead>
                <tbody>
                    {% for section in quote.sections %}
                    {% set sectionTotal = 0 %}
                        <tr>
                            <td>{{ section.title }}</td>
                            <td>
                                {% for item in section.items %}
                                    <div class="row">
                                        <div class="col-md-12">
                                            {{ item.description }}
                                            {% set sectionTotal = sectionTotal + item.hours * section.rate %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </td>
                            <td class="right">{{ "%d €" | format(sectionTotal) }}</td>
                            {% set quoteTotal = quoteTotal + sectionTotal %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <table class="table table-bordered">
                <tr>
                    <td>Total H.T.</td>
                    <td class="right">{{ "%d €" | format(quoteTotal) }}</td>
                </tr>
                <tr>
                    <td>T.V.A. 0%, non applicable, article 293B du CGI</td>
                    <td class="right">{{ "%d €" | format(0) }}</td>
                </tr>
                <tr>
                    <th><h2>Net à payer</h2></th>
                    <th class="right"><h2>{{ "%d €" | format(quoteTotal) }}</h2></th>
                </tr>
            </table>

            <table class="table table-bordered">
                <tr>
                    <th>Paiement</th>
                </tr>
                <tr>
                    <td>Paiement par chèque à l'ordre de Benoit Duffez, ou par virement bancaire: FR76 4061 8802 7000 0402 3381 234</td>
                </tr>
            </table>
        </div>
    </body>
</html>

